<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.fei.xiaohelper.mvp.view.MainActivity">

    <com.fei.xiaohelper.ui.CompassView
        android:id="@+id/main_conpass_cv"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2.5"
        app:cv_angleTextColor="@color/black"
        app:cv_mainLineColor="@color/red"
        app:cv_orientationTextColor="@color/colorPrimaryDark"
        app:cv_edgeTextColor="@color/black"
        app:cv_keyLineColor="@color/colorAccent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_speed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="0 KM/H"/>

    </LinearLayout>


</LinearLayout>
